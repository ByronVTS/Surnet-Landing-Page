---
import PlanCards from "./Cards-Internet-Plans.astro";
const allPlans = await Astro.glob("../Content/Plans/*.md");
---
<section id="planes-internet ">
<h3 class="text-center">Nuestros Planes</h3>
<div class="max-w-screen-xl  px-4 py-8 sm:px-6 sm:py-12 lg:px-8 lg:py-16  mx-auto">
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 sm:items-stretch md:grid-cols-4 md:gap-8">
      {
				allPlans.map((item) => (
        <PlanCards 
          title={item?.frontmatter?.title}
          spedd={item?.frontmatter?.spedd}
          cost={item?.frontmatter?.cost}
          benefits={item?.frontmatter?.benefits} 
          />
      ))
			}
    
  </div>
</div>
</section>
